public class RightTrianglePatternWithRowNumbers {
    public static void main(String[] args) {
        int rows = 5; // Specify the number of rows
        int currentNumber = 1; // Start from the first number

        for (int i = 1; i <= rows; i++) {
            // Loop to print the numbers in each row
            for (int j = 1; j <= i; j++) {
                System.out.print(currentNumber + " ");
                currentNumber++; // Move to the next number
            }
            // Move to the next line after printing each row
            System.out.println();
        }
    }
}
